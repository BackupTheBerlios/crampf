SRC=$(wildcard *.cc)
OBJS=$(SRC:.cc=.o)
PROGNAME=crampf

all:    $(OBJS)

ifneq ($(MAKECMDGOALS),clean)
include $(OBJS:.o=.d)
endif
ifeq ($(MAKECMDGOALS),debug)
CXXFLAGS+=-g -DDEBUG
else
CXXFLAGS+=-DDIST -O2
LDFLAGS=-s 
endif

.PHONY : clean debug all install

debug: all

install: all

clean:
	rm -f $(PROGNAME) $(OBJS) $(OBJS:.o=.d)

%.d:	%.cc
	@$(SHELL) -ec '$(CXX) -MM $(CXXFLAGS) $< \
	| sed '\''s/\($*\)\.o[ :]*/\1.o $@ : /g'\'' > $@; \
	[ -s $@ ] || rm -f $@' 2>&1

